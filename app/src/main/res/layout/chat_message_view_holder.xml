<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.9"
        android:background="@drawable/chat_message_backround_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/user_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:src="@drawable/ic_friends"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp" />


        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/user_image"
            android:lines="1"
            android:text="الدوسري الأصيل"
            android:textColor="@color/white"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/message_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/user_image"
            android:text="kadlsmklamcaskmxsaklxmsal;xmsal;xsa,l;xsa,lx;s,axl;sa,xl;sa,xl;sa,xl;sx,ls;x,sla;,x"
            android:textColor="@color/room_item_content_text_color"
            android:textSize="11sp" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>